<%= form_with model: flight, url: search_path, method: :get do |form| %>

  <div>
    <%= form.label :departure_airport_id %>
    <%= form.select(:departure_airport_id, @airport_options) %>
  </div>

  <div>
    <%= form.label :arrival_airport_id %>
    <%= form.select(:arrival_airport_id, @airport_options) %>
  </div>

  <div>
    <%= form.label :passengers %>
    <%= select_tag(:passengers, options_for_select([1,2,3,4])) %>
  </div>

  <div>
    <%= form.label :date %>
    <%= form.select(:date, options_for_select(Flight.get_flight_dates)) %>
  </div>
  <%# <%= date_select("flight", "date") %>

  <%= submit_tag "Search" %>

<% end %>
